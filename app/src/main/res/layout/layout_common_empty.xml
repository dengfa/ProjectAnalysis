<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F7"
    android:orientation="vertical" >

    <View
        android:id="@+id/empty_space"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_below="@+id/empty_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/emtpy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_empty_default" />

            <TextView
                android:id="@+id/empty_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="暂时没有更多数据"
                android:textColor="@color/gray_c1c1c1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/empty_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/gray_c1c1c1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/empty_faq_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/blue_default"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/empty_btn"
                android:layout_width="288dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/empty_btn_bg"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="没有数据"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>