<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <com.vincent.projectanalysis.widgets.VerifyCodeView
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            app:icv_et_bg_focus="@drawable/v_code_focus"
            app:icv_et_bg_normal="@drawable/v_code_normal"
            app:icv_et_divider_width="15dp"
            app:icv_et_number="4"
            app:icv_et_text_color="#000000"
            app:icv_et_text_size="10dp"/>

        <com.vincent.projectanalysis.widgets.VerifyCode2View
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            app:icv_et_bg_focus="@drawable/v_code_focus"
            app:icv_et_bg_normal="@drawable/v_code_normal"
            app:icv_et_divider_width="15dp"
            app:icv_et_hint="请输入验证码"
            app:icv_et_number="4"
            app:icv_et_text_color="#000000"
            app:icv_et_text_size="10dp"/>


        <com.vincent.projectanalysis.widgets.TagView
            android:id="@+id/tag_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"/>

        <com.vincent.projectanalysis.widgets.ScaleButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_launcher"/>

        <com.vincent.projectanalysis.widgets.ScaleViewGroupButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="TEXT"
                android:textColor="@color/white"
                android:textSize="40dp"/>
        </com.vincent.projectanalysis.widgets.ScaleViewGroupButton>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="替换密码图标，添加清除按钮:"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="密码6-20位"
            app:passwordToggleEnabled="false">

            <com.vincent.projectanalysis.widgets.ClearAndPswEditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white_10"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="15dp"
                app:closeTogDrawable="@drawable/icon_edittext_clear"
                app:closeTogEnabled="true"
                app:pswTogDrawableClose="@drawable/icon_psw_hide"
                app:pswTogDrawableOpen="@drawable/icon_psw_show"
                app:pswTogEnabled="true"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>
